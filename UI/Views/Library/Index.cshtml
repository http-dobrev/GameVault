@model IEnumerable<LibraryListItemVM>
@{
    ViewData["Title"] = "My Library";
}

<div class="container py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <h2 class="m-0">My Library</h2>

        @* Optional: add search/filter later *@
        @* <input class="form-control" style="max-width: 280px;" placeholder="Search..." /> *@
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width:72px;">Cover</th>
                    <th>Title</th>
                    <th>Genre</th>
                    <th>Platform</th>
                    <th>Status</th>
                    <th class="text-end">Price</th>
                    <th class="text-end">Hours</th>
                    <th>Dates</th>
                    <th>Notes</th>
                    <th class="text-end" style="width:150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var game in Model)
                {
                    var statusBadge = game.Status switch
                    {
                        "Completed" => "bg-success",
                        "Playing" => "bg-primary",
                        "Backlog" => "bg-secondary",
                        "Dropped" => "bg-danger",
                        "Wishlist" => "bg-warning text-dark",
                        _ => "bg-dark"
                    };

                    <tr>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(game.CoverImageURL))
                            {
                                <img src="@game.CoverImageURL"
                                     alt="@game.Title cover"
                                     class="rounded shadow-sm"
                                     style="width: 50px; height: 70px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center rounded bg-light border"
                                     style="width: 50px; height: 70px;">
                                    <span class="text-muted small">N/A</span>
                                </div>
                            }
                        </td>

                        <td>
                            <div class="fw-semibold">@game.Title</div>
                            @* Optional: subtitle line
                            <div class="text-muted small">Some extra info</div>
                            *@
                        </td>

                        <td><span class="badge bg-secondary">@game.GenreName</span></td>

                        <td>@game.Platform</td>

                        <td>
                            <span class="badge @statusBadge">@game.Status</span>
                        </td>

                        <td class="text-end">
                            @(game.PricePaid == 0 ? "Free" : $"{game.PricePaid:0.00} €")
                        </td>

                        <td class="text-end">@game.HoursPlayed</td>

                        <td>
                            <small class="text-muted d-block">Owned: @game.OwnedSince.ToString("yyyy-MM-dd")</small>
                            <small class="text-muted d-block">Added: @game.AddedAt.ToString("yyyy-MM-dd")</small>
                        </td>

                        <td>
                            <button type="button"
                                    class="btn btn-sm btn-outline-info"
                                    data-bs-toggle="tooltip"
                                    title="@game.Notes"
                                    disabled="@(string.IsNullOrWhiteSpace(game.Notes))">
                                Notes
                            </button>
                        </td>

                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-action="Edit"
                                   asp-route-gameId="@game.GameId">
                                    Edit
                                </a>

                                @* Optional Remove (recommended to go to confirmation page) *@
                                <form asp-controller="Library"
                                      asp-action="Delete"
                                      asp-route-gameId="@game.GameId"
                                      method="post"
                                      class="d-inline"
                                      onsubmit="return confirm('Remove this game from your library?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap tooltips
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        [...tooltipTriggerList].forEach(el => new bootstrap.Tooltip(el));
    </script>
}
