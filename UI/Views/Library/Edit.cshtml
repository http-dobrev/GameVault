@model UI.Models.UserGameEditViewModel

@{
    ViewData["Title"] = "Edit Game Details";
}

<div class="container py-4">
    <h1 class="mb-4">Edit Game Details</h1>

    <form asp-action="Edit" method="post">
        @* Hidden keys *@
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="GameId" />

        <div class="row g-3">

            <!-- Status -->
            <div class="col-md-6">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status"
                        asp-items="Model.StatusOptions"
                        class="form-select">
                    <option value="">-- Select status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <!-- Platform -->
            <div class="col-md-6">
                <label asp-for="Platform" class="form-label">Platform</label>
                <select asp-for="Platform"
                        asp-items="Model.PlatformOptions"
                        class="form-select">
                    <option value="">-- Select platform --</option>
                </select>
                <span asp-validation-for="Platform" class="text-danger"></span>
            </div>

            <!-- Price Paid -->
            <div class="col-md-6">
                <label asp-for="PricePaid" class="form-label">Price Paid (€)</label>
                <input asp-for="PricePaid"
                       class="form-control"
                       type="number"
                       step="0.01"
                       min="0" />
                <span asp-validation-for="PricePaid" class="text-danger"></span>
            </div>

            <!-- Purchased At -->
            <div class="col-md-6">
                <label asp-for="PurchacedAt" class="form-label">Purchased At</label>
                <input asp-for="PurchacedAt"
                       class="form-control"
                       type="date" />
                <span asp-validation-for="PurchacedAt" class="text-danger"></span>
            </div>

            <!-- Hours Played -->
            <div class="col-md-6">
                <label asp-for="HoursPlayed" class="form-label">Hours Played</label>
                <input asp-for="HoursPlayed"
                       class="form-control"
                       type="number"
                       min="0" />
                <span asp-validation-for="HoursPlayed" class="text-danger"></span>
            </div>

            <!-- Added At (read-only) -->
            <div class="col-md-6">
                <label class="form-label">Added To Library</label>
                <input class="form-control"
                       value="@Model.AddedAt.ToString("dd-MM-yyyy")"
                       readonly />
            </div>

            <!-- Notes -->
            <div class="col-12">
                <label asp-for="Notes" class="form-label">Notes</label>
                <textarea asp-for="Notes"
                          class="form-control"
                          rows="4"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                Cancel
            </a>

            <button type="submit" class="btn btn-primary">
                Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
