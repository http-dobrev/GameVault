@model IEnumerable<GameListViewModel>
@{
    ViewData["Title"] = "Games";
    bool isAdmin = User.IsInRole("Admin"); // change if you use a different admin check
}

<div class="container py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-4">
        <div>
            <h1 class="m-0">Games</h1>
            <div class="text-muted">Browse the catalog</div>
        </div>

        @if (isAdmin)
        {
            <a asp-action="Create" class="btn btn-primary">
                + Create new Game
            </a>
        }
    </div>

    <div class="row g-4">
        @foreach (var game in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="bg-light" style="height: 160px; overflow: hidden;">                        
                        @if (!string.IsNullOrWhiteSpace(game.CoverImageUrl?.Trim()))
                        {
                            <img src="@game.CoverImageUrl.Trim()"
                                 alt="@game.Title cover"
                                 class="w-100 h-100"
                                 style="object-fit: cover;" />
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center w-100 h-100">
                                <span class="text-muted">No cover</span>
                            </div>
                        }
                    </div>

                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start gap-2">
                            <h5 class="card-title mb-1">@game.Title</h5>
                            <span class="badge bg-dark">PEGI @game.PegiAge</span>
                        </div>

                        <div class="mb-2">
                            <span class="badge bg-light text-dark border">@game.GenreName</span>
                        </div>

                        <div class="small text-muted mb-2">
                            <div><strong>Release:</strong> @game.ReleaseDate.ToString("dd-MM-yyyy")</div>
                            <div><strong>Dev:</strong> @game.DeveloperName</div>
                            <div><strong>Pub:</strong> @game.PublisherName</div>
                        </div>

                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <div class="fw-semibold">
                                @(game.Price == 0 ? "Free" : $"{game.Price:0.00} €")
                            </div>

                            <a asp-action="Details" asp-route-id="@game.Id" class="btn btn-sm btn-outline-primary">
                                Details
                            </a>
                        </div>

                        @if (isAdmin)
                        {
                            <hr class="my-3" />

                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-sm btn-outline-secondary w-100">
                                    Edit
                                </a>

                                <form method="post"
                                      asp-controller="Game"
                                      asp-action="Delete"
                                      asp-route-id="@game.Id"
                                      onsubmit="return confirm('Are you sure you want to delete this game? This cannot be undone.');"
                                      class="w-100">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger w-100">Delete</button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
